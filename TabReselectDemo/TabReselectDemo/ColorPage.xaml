<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabReselectDemo.ColorPage"
             Title="{Binding ColorName}"
             Icon="TabIcon.png">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="MainLayout">
            <Label Text="{Binding ColorName, StringFormat='This page is {0}'}" FontSize="Large" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"/>
            <Label Text="{Binding Depth}" FontSize="Large" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.6, -1, -1"></Label>
            <Button x:Name="NewPageBtn" Text="New Page" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.7, -1, -1"></Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>